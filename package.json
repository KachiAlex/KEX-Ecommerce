{
  "name": "kex-ecommerce",
  "version": "1.0.0",
  "description": "KEX - Modern Single-Vendor E-commerce Platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run web\"",
    "server": "nodemon server/index.js",
    "web": "cd web && npm run dev",
    "client": "cd client && npm start",
    "build": "cd web && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../web && npm install && cd ../client && npm install",
    "start": "node server/index.js"
  },
  "keywords": ["ecommerce", "mern", "react", "nodejs", "mongodb"],
  "author": "KEX Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.40.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.4",
    "stripe": "^13.5.0",
    "paystack": "^2.0.1",
    "flutterwave-node": "^1.0.7",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
} 